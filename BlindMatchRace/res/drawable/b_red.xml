<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_enabled="true" >
    <shape>
      <solid
          android:color="#FFFAFA" />
      <stroke
          android:width="1dp"
          android:color="#FFFAFA" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item android:state_enabled="false">
    <shape>
      <gradient
          android:startColor="#A0A0A0"
          android:endColor="#A0A0A0"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#A0A0A0" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>